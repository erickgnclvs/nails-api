            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{providerToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"schedules\": [\n        {\n            \"dayOfWeek\": \"MONDAY\",\n            \"isWorkingDay\": true,\n            \"startTime\": \"09:00\",\n            \"endTime\": \"17:00\",\n            \"slotDurationMinutes\": 45\n        },\n        {\n            \"dayOfWeek\": \"TUESDAY\",\n            \"isWorkingDay\": true,\n            \"startTime\": \"09:00\",\n            \"endTime\": \"17:00\",\n            \"slotDurationMinutes\": 45\n        },\n        {\n            \"dayOfWeek\": \"WEDNESDAY\",\n            \"isWorkingDay\": true,\n            \"startTime\": \"09:00\",\n            \"endTime\": \"17:00\",\n            \"slotDurationMinutes\": 45\n        }\n    ]\n}",
                    "options": {

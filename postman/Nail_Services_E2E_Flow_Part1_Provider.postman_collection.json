{
    "info": {
        "name": "Nail Services - E2E Flow Part 1 - Provider Setup",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Register Provider",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"Response has user ID\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.userId).to.exist;",
                            "    pm.collectionVariables.set(\"providerId\", jsonData.userId);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"provider@example.com\",\n    \"password\": \"password123\",\n    \"role\": \"PROVIDER\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"phoneNumber\": \"+1234567890\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/auth/register",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "v1", "auth", "register"]
                }
            }
        },
        {
            "name": "2. Login Provider",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"Response has token\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.token).to.exist;",
                            "    pm.collectionVariables.set(\"providerToken\", jsonData.token);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"provider@example.com\",\n    \"password\": \"password123\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/auth/login",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "v1", "auth", "login"]
                }
            }
        },
        {
            "name": "3. Create Provider Profile",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"Profile created successfully\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.userId).to.exist;",
                            "    pm.expect(jsonData.profileType).to.equal('PROVIDER');",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{providerToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"phoneNumber\": \"+1234567890\",\n    \"businessName\": \"John's Nail Salon\",\n    \"description\": \"Professional nail care services\",\n    \"address\": \"123 Main St, City, State 12345\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/profiles",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "v1", "profiles"]
                }
            }
        },
        {
            "name": "4. Create Nail Service",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"Service created successfully\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.userId).to.exist;",
                            "    pm.collectionVariables.set(\"serviceId\", jsonData.userId);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{providerToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Basic Manicure\",\n    \"description\": \"Classic manicure service\",\n    \"price\": 35.00,\n    \"durationMinutes\": 45,\n    \"categoryId\": 1\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/services",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "v1", "services"]
                }
            }
        },
        {
